# This is Git's per-user configuration file.
[user]
	name = Anthony Griffon
  email = anthony@griffon.one
[core]
	excludesfile = /Users/wizard/.gitignore_global
  whitespace = space-before-tab,indent-with-non-tab,trailing-space
  ignorecase = false
	editor = nvim
  # pager = diff-so-fancy | less --tabs=2 -RFX
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[alias]
  aa= !git add -u && git add . && git status
  cob = checkout -b
  up = !git fetch origin && git rebase origin/master
  ir = !git rebase -i origin/master
  hub =! echo `git config remote.origin.url` | sed -E s/[a-z]+@github\\.com:// | sed s/\\.git$//
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  bb = !sh -c 'git rev-parse --abbrev-ref HEAD | pbcopy'
  prb ="!f() { \
        BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD); \
        git push -u origin $BRANCH_NAME; \
        hub pull-request -a miaxos --edit --browse; \
    };f"
  fix =! git commit --fixup $(git --no-pager ls -n 50 | fzf | cut -d' ' -f1)
  fixh =! git commit --fixup $(git --no-pager ls -n 50 | grep -v fixup! | fzf | cut -d' ' -f1)
  addf =! git status --short | fzf -m | awk '{$1=$1}1' | cut -d' ' -f2- | xargs git add
  restoref =! git status --short | fzf -m | awk '{$1=$1}1' | cut -d' ' -f2- | xargs git restore
  showf =! git show $(git --no-pager ls -n 50 | fzf | cut -d' ' -f1)
  difff =! git diff $(git status --short | fzf | rev | cut -d' ' -f1 | rev)
  fa =! git fetch -a
[commit]
  gpgsign = true
[color]
	# Use colors in Git commands that are capable of colored output when outputting to the terminal
	ui = auto
[push]
  default = simple
  followTags = true
[rerere]
  enabled = true
[rebase]
	autoStash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
